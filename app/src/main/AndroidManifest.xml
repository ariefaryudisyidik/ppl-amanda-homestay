<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.excode.amandahomestay">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_amanda_homestay"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_amanda_homestay"
        android:supportsRtl="true"
        android:theme="@style/Theme.AmandaHomestay.Light">
        <activity
            android:name=".AboutActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AmandaHomestay.Light.NoActionBar"></activity>
        <activity
            android:name=".BookkeepingActivity"
            android:label="Pembukuan"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RoomStatusActivity"
            android:label="Status Kamar"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TenantActivity"
            android:label="Data Penyewa"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".OnboardingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AmandaHomestay.Light" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AmandaHomestay.Light.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>